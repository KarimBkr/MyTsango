generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// KYC Status Enum
enum KycStatus {
  NONE
  PENDING
  APPROVED
  REJECTED
}

// KYC Verification Model - Phase 1
// Phase 2: Linked to User model with bidirectional relation
model KycVerification {
  id            String    @id @default(uuid())
  userId        String    // Foreign key to User
  applicantId   String?   @unique // Sumsub applicant ID
  status        KycStatus @default(NONE)
  
  // Review details from Sumsub webhook
  reviewStatus  String?   // "init", "pending", "completed", "onHold"
  reviewResult  Json?     // Full review result from Sumsub
  rejectReason  String?   // Reason if rejected
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  approvedAt    DateTime?
  rejectedAt    DateTime?
  
  // Idempotency for webhooks
  webhookEventId String?  @unique // To prevent duplicate webhook processing
  
  // Relation to User (Phase 2) - Opposite side of the relation
  user User? @relation
  
  @@index([userId])
  @@index([status])
  @@map("kyc_verifications")
}

// User model for authentication
model User {
  id             String    @id @default(uuid()) @db.Uuid
  email          String    @unique
  password       String    // bcrypt hashed
  role           UserRole  @default(MEMBER)
  kycStatus      KycStatus @default(NONE)
  kycApplicantId String?   @unique  // Link to Sumsub applicant (1-to-1 with KycVerification)
  expoPushToken  String?   // Expo push notification token (Sprint 2)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  kycVerification KycVerification? @relation(fields: [kycApplicantId], references: [applicantId])
  payments        Payment[]        // Sprint 2: User payments

  @@index([email])
  @@map("users")
}

// User roles enum
enum UserRole {
  MEMBER      // Default role for new users
  ORGANIZER   // Promoted after KYC approval
  ADMIN       // System administrators
}


// Audit Log for KYC events - Phase 1
model AuditLog {
  id          String   @id @default(uuid())
  userId      String?
  action      String   // "kyc_started", "kyc_approved", "kyc_rejected", "webhook_received"
  details     Json?    // Additional context
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

// Payment Status Enum - Sprint 2
enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

// Payment Model - Sprint 2 (Loucman)
// ⚠️ DÉPENDANCE JIHAD: Circle model doit exister avant de décommenter la relation
// Pour l'instant, circleId est un String simple
// Après migration Circle: décommenter la relation et ajouter Circle dans imports
model Payment {
  id                   String        @id @default(uuid()) @db.Uuid
  circleId             String        // ⚠️ ATTENDRE: Circle model de Jihad
  // circle               Circle        @relation(fields: [circleId], references: [id]) // À décommenter après Circle
  userId               String        @db.Uuid
  user                 User          @relation(fields: [userId], references: [id])
  amount               Decimal       @db.Decimal(10, 2) // Montant en euros
  status               PaymentStatus @default(PENDING)
  stripePaymentIntentId String        @unique // Stripe PaymentIntent ID
  receiptUrl           String?       // URL du reçu PDF (S3/MinIO)
  createdAt            DateTime      @default(now())
  confirmedAt          DateTime?
  
  @@index([circleId])
  @@index([userId])
  @@index([status])
  @@index([stripePaymentIntentId])
  @@map("payments")
}
