generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// KYC Status Enum
enum KycStatus {
  NONE
  PENDING
  APPROVED
  REJECTED
}

// KYC Verification Model - Phase 1
// Note: User model will be created by Jihad
// In Phase 2, we'll add kycStatus and kycApplicantId to User model
model KycVerification {
  id            String    @id @default(uuid())
  userId        String    // Foreign key to User (will be linked in Phase 2)
  applicantId   String?   @unique // Sumsub applicant ID
  status        KycStatus @default(NONE)
  
  // Review details from Sumsub webhook
  reviewStatus  String?   // "init", "pending", "completed", "onHold"
  reviewResult  Json?     // Full review result from Sumsub
  rejectReason  String?   // Reason if rejected
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  approvedAt    DateTime?
  rejectedAt    DateTime?
  
  // Idempotency for webhooks
  webhookEventId String?  @unique // To prevent duplicate webhook processing
  
  @@index([userId])
  @@index([status])
  @@map("kyc_verifications")
}

// Audit Log for KYC events - Phase 1
model AuditLog {
  id          String   @id @default(uuid())
  userId      String?
  action      String   // "kyc_started", "kyc_approved", "kyc_rejected", "webhook_received"
  details     Json?    // Additional context
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
