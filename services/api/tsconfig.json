{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2018",
        "lib": [
            "ES2018",
            "DOM"
        ],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    }
}